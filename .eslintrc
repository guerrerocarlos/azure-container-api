# http://eslint.org/docs/user-guide/configuring
---

env:
  node: true
  es6: true
  browser: false

rules:
  brace-style: [2, "1tbs", { "allowSingleLine": false }]
  curly: [2, "multi-line"]
  eqeqeq: [2, "allow-null"]
  no-console: 2 # Use debug package instead
  no-unused-vars: 1
  semi: [2, "always"]
  space-before-blocks: [2, "always"]
  space-before-function-paren: [2, "never"]
  space-infix-ops: 2
